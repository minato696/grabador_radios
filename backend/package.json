{
  "name": "radio-cloud-backend",
  "version": "1.0.0",
  "description": "Sistema de grabación automática para Radio Cloud System",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "pm2 start pm2.json",
    "stop": "pm2 stop \"backend grabador\"",
    "restart": "pm2 restart \"backend grabador\"",
    "logs": "pm2 logs \"backend grabador\"",
    "status": "pm2 list",
    "dev": "node --watch src/server.js",
    "setup": "node src/setup.js",
    "start:local": "node src/server.js"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "path": "^0.12.7",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "concurrently": "^9.2.0",
    "nodemon": "^3.0.2"
  }
}